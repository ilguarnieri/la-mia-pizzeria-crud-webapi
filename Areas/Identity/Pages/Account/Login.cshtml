@page
@model LoginModel

@{
    ViewData["ActiveNav"] = "login";
    ViewData["Title"] = "Login - ";
}


<main class="patter-background p-3 pt-5 pb-5 welcome-wrapper d-flex flex-column align-items-center h-100 w-100 justify-content-center">

    <section class="pizza-create bg-white container col-md-8 col-lg-6 col-xl-5 p-4 pb-5 p-md-5 pt-md-4 position-relative">

        <h2 class="text-center text-name">Accedi</h2>

        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input asp-for="Input.Email" type="email" placeholder="marco@rossi.it" class="form-control" id="email" required>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input asp-for="Input.Password" type="password" placeholder="*****" class="form-control" id="password" required>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div>
                    <button id="login-submit" type="submit" class="mb-2 w-100 btn btn-lg pizz_button button_save text-white">Log in</button>
                </div>
                <div>
                    <p class="m-0 opacity-75">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crea un nuovo account</a>
                    </p>
                </div>
            </form>
        </section>
       
    </section>

</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
